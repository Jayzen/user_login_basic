<% provide(:title, "用户登录") %>
<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label text-secondary">邮箱</label>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", autofocus: true %>
    </div>
  </div>
  <div class="form-group row mb-0">
    <label for="inputPassword" class="col-sm-2 col-form-label text-secondary">密码</label>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row mt-0">
    <label class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <label class="form-check-label text-secondary"><small>记住我</small></label>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <%= f.submit "用户登录", class: "btn btn-primary"%>
    </div>
  </div>
<% end %>

<div>
  <div class="text-secondary text-center mb-0">
    <small>或者</small>
  </div>
  <div class="mt-0">
    <hr class="text-white mt-0">
  </div>
</div>

<div class="form-group row">
  <label class="col-sm-2 col-form-label text-secondary">第三方登录</label>
    <div class="col-sm-10">
      <a href="/auth/github", class="btn btn-primary"><i class="fa fa-github fa-lg"></i>&nbsp GitHub用户登录</a>
    </div>
</div>
